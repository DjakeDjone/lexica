{
  "name": "lexica-img-fix",
  "publisher": "BenjaminFriedl",
  "displayName": "lexica-img-fix",
  "description": "Fixing image paths with nuxt content",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/DjakeDjone/lexica.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lexica-img-fix.moveToImages",
    "onCommand:lexica-img-fix.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lexica-img-fix.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "lexica-img-fix.moveToImages",
        "title": "Move to images"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lexica Image Fix Configuration",
      "properties": {
        "lexica-img-fix.destinationFolder": {
          "type": "string",
          "default": "public/images",
          "description": "The folder (relative to workspace root) to move images to."
        },
        "lexica-img-fix.markdownPathPrefix": {
          "type": "string",
          "default": "/images/",
          "description": "The path prefix to use in markdown image links (e.g. /images/)."
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "lexica-img-fix.moveToImages",
          "when": "resourceExtname == .png || resourceExtname == .jpg || resourceExtname == .jpeg || resourceExtname == .gif",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "lexica-img-fix.moveToImages",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
